---
import LinkButton from "./LinkButton.astro";
import Githubicon from "./icons/Githubicon.astro";
import HugoIcon from "./icons/HugoIcon.astro";
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"

const TAGS ={
 
NEXT:{
 name: "Next.js",
 class: "bg-black text-white",
  icon: NextJS
},
TAILWIND:{
  name: "Tailwind CSS",
 class: "bg-[#003159] text-white",
  icon: Tailwind
},
HUGOSERVER:{
  name: "HUGO",
 class: "bg-[#C9177E] text-white",
  icon: HugoIcon
},
}
const PROJECTS = [ 
  {
    title: "Proyecto Migala",
    description: "Colaborando activamente en la p치gina web del proyecto Migala. Organizaci칩n social en favor de la sociedad Mexicana",
    link: "https://www.proyectomigala.global/",
    github: "https://github.com/ProyectoMigala/proyectomigala.github.io",
    img: "/proyecto_migala.png",
    tags: [TAGS.HUGOSERVER, TAGS.TAILWIND],
  },
  {
    title: "Promptia",
    description: "Aplicaci칩n web para hacer promps de Inteligencia Artificial",
    link: "#",
    github: "",
    img: "/promptia_example.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
 
];
---
<div class="flex flex-col gap-y-12">
  {
  PROJECTS.map(({ title, description, link, github, img, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-blue-300 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-4 flex-row mb-2">
        {tags.map((tag) => (
           <li>   
              <span class= ` flex gap-x-2 rounded-full text-sm ${tag.class} py-2 px-1` >
                <tag.icon class="size-4"/>
                {tag.name}
              </span>       
          </li>
        ))}
      </ul>
      <img 
      loading="lazy"
      class="rounded shadow-2xl shadow-white/15"
      src={img} 
      alt=`Screenshot about ${title}` />
      <footer class="flex gap-x-4 mt-1">
        {github && (
              <LinkButton href={github}>
          <Githubicon class="size-4 md:size-6 mr-2"/>Ver c칩digo
          </LinkButton>
        )}
    
        </footer>
    </article>
  ))
}
</div>

