---
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"

const TAGS ={
 
NEXT:{
 name: "Next.js",
 class: "bg-black text-white",
  icon: NextJS
},
TAILWIND:{
  name: "Tailwind CSS",
 class: "bg-[#003159] text-white",
  icon: Tailwind
},
}
const PROJECTS = [
  {
    title: "Promptia",
    description: "It is an open source AI prompting tool for modern world, create and share the best prompts to your coder mates. Made in yt course",
    link: "#",
    github: "",
    img: "public/promptia_example.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ title, description, link, github, img, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-blue-300 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-4 flex-row mb-2">
        {tags.map((tag) => (
           <li>   
              <span class= ` flex gap-x-2 rounded-full text-sm ${tag.class} py-2 px-1` >
                <tag.icon class="size-5"/>
                {tag.name}
              </span>       
          </li>
        ))}
      </ul>
      <img 
      class="rounded shadow-2xl shadow-white/15"
      src={img} 
      alt=`Screenshot about ${title}` />
    </article>
  ))
}
